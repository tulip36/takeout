model UserExample {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}

model Menu {
  menuId    Int      @id @default(autoincrement())
  price     Float
  startDate DateTime @default(now())
  endDate   DateTime
  foodId    Int
  foodItem  FoodItem @relation(fields: [foodId], references: [foodId])

}

model FoodItem {
  foodId     Int      @id @default(autoincrement())
  name       String
  quantity   Float
  unitPrice  Float
  categoryId Int
  category   Category @relation(fields: [categoryId], references: [categoryId])
  Menu       Menu[]
}

model Category {
  categoryId Int        @id @default(autoincrement())
  nmae       String
  foodItem   FoodItem[]
}

model User {
  id       Int       @id @default(autoincrement())
  username String
  password String
  nickname String
  status   Int
  Profile  Profile[]
}

model Profile {
  id        Int    @id @default(autoincrement())
  userId    Int
  user      User   @relation(fields: [userId], references: [id])
  nmae      String
  sex       String
  address   String
  telephone String
  status    Int
}
